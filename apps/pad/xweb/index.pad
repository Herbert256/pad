<blockquote>

{block}

  {true data='xref'}

    {range '1..{$lvl}'}
      <blockquote>
    {/range}

    <h3>{$type}</h3>

    <blockquote>

      {getXref '{!type}', '{$dir}'}

        {if $dir}
          <a href="{$padGo}_xweb/dir&dir={$dir}&for={$type|url}&item={$item}&base={$item}&xref=manual">{$item}</a>
        {elseif $pages}
          <a href="{$padGo}_xweb/pages&pages={$pages}&for={$type|url}&item={$item}&base=&xref=manual">{$item}</a>
        @else@
          {$item}
        {/if}

        &nbsp; 
        
      {/getXref}
            
    </blockquote>

    {range '1..{$lvl}'}
      </blockquote>
    {/range}

  {/true}

{/block}

</blockquote>