<blockquote>

{block}

  {true data='xref'}

    {range '1..{$lvl}'}
      <blockquote>
    {/range}

    <h3>{$type}</h3>

    <blockquote>

      {getXref '{!type}', '{$xref}', '{$dir}'}

        {if $dir}
          <a href="{$padGo}reference/dir&dir={$dir}&for={$type|url}&xitem={$item}">{$item}</a>
        {elseif $pages}
          <a href="{$padGo}reference/pages&pages={$pages}&for={$type|url}&xitem={$item}">{$item}</a>
        @else@
          {$item}
        {/if}

        &nbsp; 

      {/getXref}
            
    </blockquote>

    {range '1..{$lvl}'}
      </blockquote>
    {/range}

  {/true}

{/block}

</blockquote>